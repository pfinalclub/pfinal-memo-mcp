{
  "mcpServers": {
    "memo-server-stdio": {
      "command": "php",
      "args": ["server.php"],
      "env": {
        "APP_ENV": "development",
        "PHP_MEMORY_LIMIT": "512M"
      },
      "description": "Memo MCP Server - stdio 模式（推荐用于本地开发）"
    },
    "memo-server-http": {
      "url": "http://127.0.0.1:8891",
      "description": "Memo MCP Server - HTTP 模式（用于远程访问）"
    },
    "memo-server-docker": {
      "command": "docker",
      "args": ["exec", "-i", "memo-mcp-dev", "php", "server.php"],
      "env": {
        "APP_ENV": "development"
      },
      "description": "Memo MCP Server - Docker 容器模式"
    }
  },
  "settings": {
    "defaultServer": "memo-server-stdio",
    "timeout": 30000,
    "retryAttempts": 3,
    "logLevel": "info"
  }
}
