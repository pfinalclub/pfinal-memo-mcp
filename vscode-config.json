{
    "tools": [
        {
            "name": "memo.list",
            "description": "获取所有备忘录",
            "parameters": {}
        },
        {
            "name": "memo.search",
            "description": "搜索备忘录",
            "parameters": {
                "type": "object",
                "properties": {
                    "keyword": {
                        "type": "string",
                        "description": "搜索关键词"
                    }
                },
                "required": ["keyword"]
            }
        }
    ],
    "server": {
        "transport": "stdio",
        "command": ["node", "client/node/cursor-stdio-client.js"],
        "settings": {
            "stdio": {
                "mode": "optimized",
                "buffer_interval": 10,
                "non_blocking": true
            }
        }
    }
}
